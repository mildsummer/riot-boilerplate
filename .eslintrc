{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "settings": {
    "import/resolve": {
      "extenstions": [ ".es6", ".js", ".css", ".sass" ]
    },
    "import/parser": "babel-eslint"
  },
  "extends": ["eslint:recommended", "airbnb"],
  "rules": {
    "strict": [2, "function"],
    "no-undef": 2,
    "arrow-parens": [0],
    "no-console": ["warn", { allow: ["warn", "error"] }],
    "comma-dangle": ["error", "never"],
    "import/no-unresolved": [0, { commonjs: true, amd: true }],
    "camelcase": [0, {"properties": "always"}],
    "new-cap": [0],
    "no-param-reassign": [0]
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "plugins": ["riot"]
}
